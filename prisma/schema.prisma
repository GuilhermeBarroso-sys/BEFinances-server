generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "debian-openssl-1.0.x", "darwin-arm64"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  username    String
  email       String
  password    String
  Transaction Transaction[]
  Budget      Budget[]

  @@unique([email])
  @@map("users")
}

model Transaction {
  id          String   @id @default(uuid())
  userId      User     @relation(fields: [user_id], references: [id])
  user_id     String
  date        DateTime
  amount      Float
  category    String
  description String

  @@index([date])
  @@map("transactions")
}

model Budget {
  id      String @id @default(uuid())
  userId  User   @relation(fields: [user_id], references: [id])
  user_id String
  year    String
  month   String
  amount  Float

  @@index([year, month])
  @@map("budgets")
}
